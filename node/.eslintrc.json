{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
	    "indent": ["error", 2]
    },
    "overrides": [ {
                   "files": ["**/*.js", "**/*.ts"],
	           "rules": {
	           "indent": ["error", 2]
	         } }]
}
